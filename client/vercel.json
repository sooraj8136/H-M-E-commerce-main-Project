{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "source": "/static/(.*)",
            "destination": "/build/static/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/server.js"
        }
    ]
}
